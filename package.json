  "license": "MIT",
  "description": "Just for educational purpose.",
  "keywords": [
    "frontend",
    "UI",
    "BEM",
    "html",
    "pug",
    "css",
    "scss",
    "js",
    "ts",
    "javascript",
    "typescript",
    "webpack"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "scripts": {
    "start": "rm -r -f app/dist && cross-env NODE_ENV=development MEASURE=false webpack-dev-server --config configs/webpack.config.js --mode development --open",
    "dev": "cross-env NODE_ENV=development MEASURE=false webpack --config configs/webpack.config.js --mode development",
    "build": "cross-env NODE_ENV=production MEASURE=true webpack --config configs/webpack.config.js --mode production",
    "analyze": "mkdirp app/log && cross-env NODE_ENV=production MEASURE=false webpack --config configs/webpack.config.js --mode production --json > app/log/stats.json && webpack-bundle-analyzer app/log/stats.json",
    "lint": "stylelint \"./app/src/**/*.scss\" && eslint ./app/src/ --ext .js,.ts",
    "lint:fix": "prettier ./app/src/ --ignore-path ./configs/prettier/.prettierignore --ignore-unknown --check --write && stylelint \"./app/src/**/*.scss\" --fix && eslint ./app/src/ --ext .js,.ts --fix",
    "deploy": "git subtree push --prefix app/dist origin gh-pages"
  },
  "stylelint": {
    "extends": "./configs/stylelint.config.js"
  },
  "eslintConfig": {
    "extends": "./configs/.eslintrc.js"
  },
  "prettier": "./configs/prettier/prettier.config.js",
  "devDependencies": {
    "@prettier/plugin-pug": "^1.15.2",
