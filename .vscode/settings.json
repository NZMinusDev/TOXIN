{
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "editor.rulers": [80],
  "editor.formatOnSave": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[pug]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "path-autocomplete.excludedItems": {
    "**/*.js": { "when": "**/*.ts" },
    "**/*.map": { "when": "**" },
    "**/{.git,node_modules}": { "when": "**" }
  },
  "path-autocomplete.extensionOnImport": true,
  "path-autocomplete.includeExtension": true,
  "path-autocomplete.pathMappings": {
    "@layouts": "${folder}/app/src/layouts",
    "@library.blocks": "${folder}/app/src/components/library.blocks/",
    "@common.blocks": "${folder}/app/src//components/common.blocks/",
    "@themes": "${folder}/app/src/themes/",
    "@assets": "${folder}/app/src/assets/",
    "@pages": "${folder}/app/src/pages/",
    "@utils": "${folder}/app/src/utils/"
  },
  "path-autocomplete.triggerOutsideStrings": true,
  "path-autocomplete.enableFolderTrailingSlash": true,
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "cSpell.language": "en,ru",
  "cSpell.ignoreWords": ["import", "import normalize", "normalize"],
  "cSpell.words": [
    "ГГГГ",
    "Патрисия",
    "Стёклышкова",
    "шумоподавляющие",
    "autoprefixed",
    "behaviour",
    "bemdecl",
    "browserconfig",
    "browserslist",
    "btns",
    "builtins",
    "camelcase",
    "datepicker",
    "Datepickers",
    "datestring",
    "datetime",
    "DDTHH",
    "defaultcount",
    "devtool",
    "doiuse",
    "dropdowns",
    "Duckable",
    "Espree",
    "Flexbugs",
    "fontawesome",
    "fortawesome",
    "gifsicle",
    "Hola",
    "Hrefs",
    "Incrementation",
    "infimum",
    "inputmask",
    "inputmode",
    "inspectpack",
    "iqdropdown",
    "jpegtran",
    "maxcount",
    "Memorizable",
    "mincount",
    "mixins",
    "modificator",
    "modificators",
    "msapplication",
    "narmalize",
    "nohashed",
    "nooped",
    "optipng",
    "paginations",
    "Postcss",
    "prefetch",
    "preload",
    "Preprocessors",
    "proxied",
    "Proxify",
    "proxying",
    "PTDHMS",
    "sonarjs",
    "spritesheet",
    "stylelint",
    "Supremum",
    "tabindex",
    "TBEM",
    "THTML",
    "unproxify",
    "valuemax",
    "valuemin",
    "valuenow",
    "valuetext",
    "webp",
    "whatshot",
    "Zaitsev"
  ]
}
