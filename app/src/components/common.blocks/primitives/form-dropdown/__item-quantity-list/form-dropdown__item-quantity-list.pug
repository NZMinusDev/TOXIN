//-
  name?: string - name of component hidden input
  placeholder?: string - text of placeholder
  openMod?: 'toggle' | 'fold' | 'apply'
  groups: { ['group-name': string]: { selectionText: string, textPlural: string } }, example: { guests: { selectionText: 'гость', textPlural: 'гостя' }, младенцы: { selectionText: 'младенец', textPlural: 'младенцев' } }
  list: { ['item-title': string]: { default: number, min: number, max: number, group?: 'group-name-2' } }, example:{ взрослые: { default: 0, min: 0, max: 1 / 0, group: 'гости' }, дети: { default: 0, min: 0, max: 1 / 0, group: 'гости' }, младенцы: { default: 0, min: 0, max: 1 / 0} }; - if group is unset the itemName will be used instead
  isFilter?: boolean - if true, input change event will reload page with chosen value(get method)
  Tip: https://github.com/reservamos/item-quantity-dropdown
  Tip: mixin also uses 'and attributes'(&attributes)
mixin form-dropdown__item-quantity-list({ name = 'iqList', placeholder = 'placeholder', openMod = 'toggle', groups = {}, list = {}, isFilter = false } = {})
  -
    let total = '';
    let counter = 0;
    Object.values(list).forEach((value) => {
      if (counter > 0) total += ',';
      total += value.default;
      counter++;
    });
  button.iqdropdown.form-dropdown__item-quantity-list(
    id=name,
    class=`form-dropdown__item-quantity-list_openMod-${openMod}`,
    type="button"
  )&attributes(attributes)
    input.form-dropdown__list-input(
      name=name,
      type="hidden",
      value=total,
      data-is-filter=isFilter
    )
    p.iqdropdown-selection(data-placeholder=placeholder)
    .iqdropdown-menu(data-groups=groups)
      each limits, item in list
        input.form-dropdown__option-input(
          type="hidden",
          name=`${name}-${item}`,
          value=limits.default
        )
        .iqdropdown-menu-option(
          data-id=item,
          data-defaultcount=limits.default,
          data-mincount=limits.min,
          data-maxcount=limits.max,
          data-group=limits.group
        ) 
          div
            h3.iqdropdown-itemItem= item
      if block
        block
