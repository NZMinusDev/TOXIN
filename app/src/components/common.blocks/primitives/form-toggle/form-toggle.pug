//- id: id of toggle button
//- class: class for component bem mix: such as positioning functionality
//- label: text of label
//- name: name of toggle button
//- description: text of description
//- checked: same as input checked
mixin form-toggle
  .form-toggle(class=attributes.class)
    if attributes.label
      h3.form-label
        label(for=attributes.id)= attributes.label
    .form-toggle__item
      input.form-toggle__button-item(
        id=attributes.id,
        type="checkbox",
        name=attributes.name,
        checked=attributes.checked
      )
      if attributes.description
        label.form-toggle__description-item(for=attributes.id)= attributes.description
