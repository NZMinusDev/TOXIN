//- label?: text of label
//- name: name of toggle button
//- checked: { boolean } - same as input checked
mixin form-toggle({ name = 'toggle', label = '', checked = false } = {})
  .form-toggle&attributes(attributes)
    input.form-toggle__button(
      id=name,
      type="checkbox",
      name=name,
      checked=checked
    )
    if label
      label.form-toggle__label(for=name)= label
