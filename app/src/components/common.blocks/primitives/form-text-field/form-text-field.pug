//- autofocus="autofocus" is true value
mixin form-text-field
  .form-text-field
    if attributes.label
      h3.form-text-field__label
        label.form-text-field__label(for=attributes.id)= attributes.label
    input.form-text-field__field(
      id=attributes.id,
      type=attributes.type,
      name=attributes.name,
      value=attributes.value,
      placeholder=attributes.placeholder,
      autofocus=attributes.autofocus
    )
