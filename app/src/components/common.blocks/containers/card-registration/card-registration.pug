include ~@common.blocks/primitives/form-text-field/form-text-field.pug
include ~@common.blocks/primitives/form-toggle/form-toggle.pug
include ~@common.blocks/containers/form-radio-buttons/form-radio-buttons.pug
include ~@common.blocks/primitives/button/button.pug

//- id: id of card
//- class: class for component bem mix: such as positioning functionality
//- action - form action
//- method - form method
mixin card-registration
  form.card-base.card-registration(
    id=attributes.id,
    class=attributes.class,
    action=attributes.action,
    method=attributes.method || "post"
  )
    h1.card-registration__title Регистрация аккаунта
    +form-text-field.card-registration__name-field(name="name", placeholder="Имя")
    +form-text-field.card-registration__surname-field(name="surname", placeholder="Фамилия")
    +form-radio-buttons.card-registration__gender-radio-btn(
      name="gender",
      buttons={ isMale: { id: 'isMaleRadio', itemLabel: 'Мужчина', checked: 'checked' }, isFemale: { id: 'isFemaleRadio', itemLabel: 'Женщина' } }
    )
    +form-text-field.card-registration__birthday-field(
      label="Дата рождения",
      type="date",
      name="birthday"
    )
    +form-text-field.card-registration__email-field(
      label="Данные для входа в сервис",
      type="email",
      name="email"
    )
    +form-text-field.card-registration__password-field(type="password", name="password")
    +form-toggle.card-registration__special-offer-toggle(
      name="specialOffers",
      itemLabel="Получать спецпредложения"
    )
    +button.card-registration__pay-btn(
      type="submit",
      value="Перейти к оплате",
      modClass="link"
    )
    p.card-registration__caption-of-redirect-to-entering Уже есть аккаунт на Toxin
    +button.card-registration__entering-btn(
      type="submit",
      value="Войти",
      modClass="bordered"
    )
