include ~@common.blocks/primitives/form-text-field/form-text-field.pug
include ~@common.blocks/primitives/form-toggle/form-toggle.pug
include ~@common.blocks/containers/form-radio-buttons/form-radio-buttons.pug
include ~@common.blocks/primitives/button/button.pug

//- 
  action: string - form action
  name?: string - name of <form>, also it is used such prefix for names of inner forms
  method?: 'get' | 'post' - form method
  Tip: mixin also uses 'and attributes'(&attributes)
mixin card-registration({ action = '/mock.js', name = 'card-registration', method = 'post' } = {})
  form.card-base.card-registration(name=name, action=action, method=method)&attributes(attributes)
    h1.card-registration__title Регистрация аккаунта
    +form-text-field({ name: `${name}-name`, placeholder: 'Имя' }).card-registration__name-field
    +form-text-field({ name: `${name}-surname`, placeholder: 'Фамилия' }).card-registration__surname-field
    +form-radio-buttons({ buttons: { male: { label: 'Мужчина', checked: true }, female: { label: 'Женщина' } } }).card-registration__gender-radio-btn
    +form-text-field({ heading: { h3: 'Дата рождения' }, name: `${name}-birthday`, type: 'date' }).card-registration__birthday-field
    +form-text-field({ heading: { h3: 'Данные для входа в сервис' }, name: `${name}-email`, type: 'email' }).card-registration__email-field
    +form-text-field({ name: `${name}-password`, type: 'password' }).card-registration__password-field
    +form-toggle({ name: `${name}-special-offers`, label: 'Получать спецпредложения' }).card-registration__special-offer-toggle
    +button({ appearance: 'link' }).card-registration__link-btn(
      type="submit",
      value="Перейти к оплате",
      tabindex="1"
    )
    p.card-registration__caption-of-redirect-to-entering Уже есть аккаунт на Toxin
    +button({ tag:'a', text: 'Войти', appearance: 'bordered' }).card-registration__switch-btn(
      href="/sign-in.html"
    )
