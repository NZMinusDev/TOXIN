include ~@common.blocks/primitives/form-text-field/form-text-field.pug
include ~@common.blocks/primitives/button/button.pug

//- id: id of card
//- class: class for component bem mix: such as positioning functionality
//- action - form action
//- method - form method
mixin card-entering
  form.card-base.card-entering(
    id=attributes.id,
    class=attributes.class,
    action=attributes.action,
    method=attributes.method || 'post'
  )
    h1.card-entering__title Войти
    +form-text-field.card-entering__email-field(type="email", name="email")
    +form-text-field.card-entering__password-field(type="password", name="password")
    +button.card-entering__entering-btn(
      type="submit",
      name="nextPage",
      value="Войти",
      modClass="link"
    )
    p.card-entering__caption-of-redirect-to-registration Нет аккаунта на Toxin?
    +button.card-entering__registration-btn(
      type="submit",
      name="nextPage",
      value="Создать",
      modClass="bordered"
    )
