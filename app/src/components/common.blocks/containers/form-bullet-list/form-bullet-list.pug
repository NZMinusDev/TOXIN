include ~@common.blocks/primitives/heading/heading.pug

//- 
 heading?: { tag: text }, example: { h3: 'awesome heading' } - list heading
 mod?: 'rich' - mod of list
 items: string[] | { [text: string]: { icon: 'material icon name', description: string } } - items of list
 Tip: mixin also uses 'and attributes'(&attributes)

mixin form-bullet-list({ heading = '', mod = '', items = {} } = {})
  -
    const modClass = mod ? `form-bullet-list_${mod}` : undefined;
  .form-bullet-list(class=modClass)&attributes(attributes)
    if heading
      .form-bullet-list__heading 
        +heading(heading)
    ul.form-bullet-list__list
      each item, key in items
        case mod
          when 'rich'
            li.form-bullet-list__item(data-icon=item.icon)= key
              p.form-bullet-list__description= item.description
          default
            li.form-bullet-list__item= item
