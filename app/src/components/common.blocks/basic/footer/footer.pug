include ~@common.blocks/primitives/form-text-field/form-text-field.pug

//- type?: 'creative'
//- class?: class for component bem mix: such as positioning functionality

mixin footer
  -
    const icons = [
      { img: '', title: 'twitter' },
      { img: '', title: 'facebook' },
      { img: '', title: 'instagram' },
    ];
    const copyright = 'Copyright © 2018 Toxin отель. Все права зачищены.';
  case attributes.type
    when 'creative'
      footer.footer.footer_creative.content-container(class=attributes.class)
        section.footer__logo
          .logo.logo_color-gradient-primary
          span.logo__title TOXIN
        p.footer__copyright= copyright
        section.footer__icons
          ul.footer__icons-list
            each icon in icons
              li.footer__icons-list-item
                a.icon.icon_color-gradient-primary.footer__brand-icon(
                  href="#",
                  data-icon=icon.img,
                  title=icon.title
                )
    default
      footer.footer.content-container(class=attributes.class)
        section.footer__widgets
          section.footer__logo
            .logo.logo_color-gradient-primary
            span.logo__title TOXIN
          p.footer__description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          section.footer__navigation
            input#footer-navigation-checkbox.footer__list-checkbox(type="checkbox") 
            h3.footer__list-label
              label(for="footer-navigation-checkbox") Навигация
            ul.footer__list
              li.footer__list-item
                a(href="/mock-address/change-me") О нас
              li.footer__list-item
                a(href="/mock-address/change-me") Новости
              li.footer__list-item
                a(href="/mock-address/change-me") Служба поддержки
              li.footer__list-item
                a(href="/mock-address/change-me") Услуги
          section.footer__about
            input#footer-about-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label
              label(for="footer-about-checkbox") О нас
            ul.footer__list
              li.footer__list-item
                a(href="/mock-address/change-me") О сервисе
              li.footer__list-item
                a(href="/mock-address/change-me") Наша команда
              li.footer__list-item
                a(href="/mock-address/change-me") Вакансии
              li.footer__list-item
                a(href="/mock-address/change-me") Инвесторы
          section.footer__support
            input#footer-support-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label
              label(for="footer-support-checkbox") Служба поддержки
            ul.footer__list
              li.footer__list-item
                a(href="/mock-address/change-me") Соглашения
              li.footer__list-item
                a(href="/mock-address/change-me") Сообщества
              li.footer__list-item
                a(href="/mock-address/change-me") Связь с нами
          section.footer__subscription
            input#footer-subscription-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label
              label(for="footer-subscription-checkbox") Подписка
            ul.footer__list
              li.footer__list-item
                p.footer__description Получайте специальные предложения и новости сервиса
              li.footer__list-item
                +form-text-field(
                  type="email",
                  name="subscription-form-text-field",
                  data-material-icon="arrow_forward"
                )
        section.footer__copyright-bar
          p.footer__copyright= copyright
          .footer__icons
            each icon in icons
              a.icon.icon_color-gradient-primary.footer__brand-icon(
                href="",
                data-icon=icon.img,
                title=icon.title
              )
