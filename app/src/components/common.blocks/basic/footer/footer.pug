include ~@common.blocks/primitives/form-text-field/form-text-field.pug

//- type?: 'creative'
//- if type !== 'creative'
  //- action: email form action attribute
  //- method: email form method attribute
mixin footer({ type = undefined, name = 'footer-subscription', action = '/mock.js', method = 'post' } = {})
  -
    const icons = [
      { img: '', title: 'twitter' },
      { img: '', title: 'facebook' },
      { img: '', title: 'instagram' },
    ];
    const copyright = 'Copyright © 2018 Toxin отель. Все права зачищены.';
  case type
    when 'creative'
      footer.footer.footer_creative.content-container&attributes(attributes)
        section.footer__logo
          .logo.logo_color-gradient-primary
          span.logo__title TOXIN
        p.footer__copyright= copyright
        section.footer__icons
          ul.footer__icons-list
            each icon in icons
              li.footer__icons-list-item
                a.icon.icon_color-gradient-primary.footer__brand-icon(
                  href="/mock.html",
                  data-icon=icon.img,
                  title=icon.title
                )
    default
      footer.footer.content-container&attributes(attributes)
        section.footer__widgets
          section.footer__logo
            .logo.logo_color-gradient-primary
            span.logo__title TOXIN
          p.footer__description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          section.footer__navigation
            input#footer-navigation-checkbox.footer__list-checkbox(type="checkbox") 
            h3.footer__list-label
              label(for="footer-navigation-checkbox", tabindex="0") Навигация
            ul.footer__list
              li.footer__list-item
                a(href="/mock.html") О нас
              li.footer__list-item
                a(href="/mock.html") Новости
              li.footer__list-item
                a(href="/mock.html") Служба поддержки
              li.footer__list-item
                a(href="/mock.html") Услуги
          section.footer__about
            input#footer-about-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label
              label(for="footer-about-checkbox", tabindex="0") О нас
            ul.footer__list
              li.footer__list-item
                a(href="/mock.html") О сервисе
              li.footer__list-item
                a(href="/mock.html") Наша команда
              li.footer__list-item
                a(href="/mock.html") Вакансии
              li.footer__list-item
                a(href="/mock.html") Инвесторы
          section.footer__support
            input#footer-support-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label
              label(for="footer-support-checkbox", tabindex="0") Служба поддержки
            ul.footer__list
              li.footer__list-item
                a(href="/mock.html") Соглашения
              li.footer__list-item
                a(href="/mock.html") Сообщества
              li.footer__list-item
                a(href="/mock.html") Связь с нами
          section.footer__subscription
            input#footer-subscription-checkbox.footer__list-checkbox(type="checkbox")
            h3.footer__list-label
              label(for="footer-subscription-checkbox", tabindex="0") Подписка
            ul.footer__list
              li.footer__list-item
                p.footer__description Получайте специальные предложения и новости сервиса
              li.footer__list-item
                form(name=name, action=action, method=method) 
                  +form-text-field({ type: 'email', name: 'subscription-form-text-field', materialIcon: 'arrow_forward'})
        section.footer__copyright-bar
          p.footer__copyright= copyright
          .footer__icons
            each icon in icons
              a.icon.icon_color-gradient-primary.footer__brand-icon(
                href="/mock.html",
                data-icon=icon.img,
                title=icon.title
              )
