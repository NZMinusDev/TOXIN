extends ~@layouts/basic/ui-kit-layout/ui-kit-layout.pug

//- components
include ~@common.blocks/containers/card-pick-room/card-pick-room.pug
include ~@common.blocks/containers/card-registration/card-registration.pug
include ~@common.blocks/containers/card-entering/card-entering.pug
include ~@common.blocks/containers/card-room-definition/card-room-definition.pug
include ~@common.blocks/containers/card-room/card-room.pug
include ~@common.blocks/primitives/card-datepicker/card-datepicker.pug

block append variables
  -
    title = 'Карточки';
    description = 'Карточки, используемые в базовом макете сайта TOXIN';

block content
  - const msPerDay = 1000 * 60 * 60 * 24;
  main.cards-layout.ui-kit-container
    +card-pick-room.cards-layout__pick-room
    +card-registration.cards-layout__registration
    +card-entering.cards-layout__entering
    +card-room-definition({ roomNumber:888, roomGrade:"Люкс", paymentAmount:9990, selectedDates:"2019-08-19,2019-08-23", guestsGroups:{ гости: { selectionText: 'гость', textPlural: 'гостя' }, младенцы: { selectionText: 'младенец', textPlural: 'младенцев' } }, guestsList:{ взрослые: { default: 2, min: 0, max: 1 / 0, group: 'гости' }, дети: { default: 1, min: 0, max: 1 / 0, group: 'гости' }, младенцы: { default: 0, min: 0, max: 1 / 0 } }, servicesPayment:2179, servicesSale:2179, additionalServicesPayment:300}).cards-layout__room-definition
    +card-room({ href: "/mock.html", roomNumber: 888, roomGrade: "Люкс", paymentAmount: 9990, rate: 5, commentsAmount: 145, paths: [htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/luxury/888/888.png').default : undefined, htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/common/840/840.png').default : undefined, htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/luxury/888/888.png').default : undefined, htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/common/840/840.png').default : undefined] }).cards-layout__card-luxury-room
    +card-room({ href: "/mock.html", roomNumber: 840, paymentAmount: 9900, rate: 4, commentsAmount: 65, paths: [htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/common/840/840.png').default : undefined, htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/luxury/888/888.png').default : undefined, htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/common/840/840.png').default : undefined, htmlWebpackPlugin ? require('@assets/pictures/contents/rooms/luxury/888/888.png').default : undefined] }).cards-layout__card-common-room
    -
      const cardDatepickerSelectedDates = `${new Date(
        Date.now() + msPerDay
      ).toISOString()},${new Date(Date.now() + msPerDay * 4).toISOString()}`;
    +card-datepicker.cards-layout__datepicker(data-range)
