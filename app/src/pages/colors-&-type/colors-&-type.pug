extends ~@layouts/basic/colors-and-type-layout/colors-and-type-layout.pug

block append variables
  -
    title = 'Цвета и шрифт';
    description = 'Цвета и шрифты, используемые в макете сайта TOXIN';
    colors = htmlWebpackPlugin ? require('@pages/colors-&-type/colors.json') : { Red: '#ff0000' };
    type = htmlWebpackPlugin
      ? require("@pages/colors-&-type/type.json")
      : {
          Body: {
            tag: "p",
            title:
              "This is the body text which is used for most of the design, like paragraphs, lists, etc",
          },
        };
